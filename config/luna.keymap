#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

#define base 0
#define lower 1
#define upper 2
#define bottom 3
#define nav  4
#define misc 5

&caps_word {
    continue-list = <UNDERSCORE MINUS>;
};

&sk {
  quick-release;
};

&lt {
    tapping-term-ms = <250>;
    quick_tap_ms = <250>;
    flavor = "tap-preferred";
};

/ {
    #include "combos.dtsi"

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            label = "Base";
            bindings = <
                &kp N1 &kp N2   &kp N3   &kp N4    &kp N5          &kp N6    &kp N7  &kp N8   &kp N9 &kp N0
                &kp N  &kp S    &kp T    &kp H     &kp GRAVE       &kp BSLH  &kp A   &kp E    &kp I  &kp O
                       &kp EXCL &kp SEMI &kp COMMA                           &kp DOT &kp FSLH &kp QMARK
                                         &sl nav &kp SPACE   &sk LSHFT &kp BSPC
            >;
        };
        
        lower_layer {
            label = "Lower";
            bindings = <
                &trans &trans &trans &trans &trans   &trans &trans &trans &trans &trans 
                &kp V  &kp F  &kp G  &kp M  &trans   &trans &kp K  &kp Z  &kp J  &kp DQT
                       &trans &trans &trans                 &trans &trans &trans
                                     &trans &trans   &trans &sl bottom
            >;
        };

        upper_layer {
            label = "Upper";
            bindings = <
                &trans &trans &trans &trans &trans       &trans &trans &trans &trans &trans 
                &kp L  &kp C  &kp D  &kp R  &trans       &trans &kp U  &kp Q  &kp Y  &kp SQT
                       &trans &trans &trans                     &trans &trans &trans
                                     &sl bottom &trans   &trans &trans
            >;
        };
        
        bottom_layer {
            label = "Bottom";
            bindings = <
                &trans   &trans &trans &trans &trans   &trans &trans   &trans   &trans    &trans 
                &kp LBKT &kp W  &kp P  &kp B  &trans   &trans &kp MINUS &kp EQUAL &kp COLON &kp RBKT
                         &trans &trans &trans                 &trans   &trans   &trans
                                       &trans &trans   &trans &trans
            >;
        };

        nav_layer {
            label = "Navigation";
            bindings = <
               &kp LA(UP) &kp LA(DOWN) &kp LC(LS(TAB)) &kp LC(TAB)      &trans       &kp INS &kp HOME   &kp UP     &kp END      &kp PG_UP
               &sk LGUI   &sk LALT     &sk LCTL        &sk LSHIFT       &caps_word   &kp DEL &kp LEFT   &kp DOWN   &kp RIGHT    &kp PG_DN
                          &kp ESC      &kp LA(LS(UP))  &kp LA(LS(DOWN))                      &kp C_PREV &kp C_PLAY &kp C_NEXT
                                                       &sl misc         &trans       &kp TAB &kp RET
            >;
        };

        misc_layer {
            label = "Miscellaneous";
            bindings = <
                &trans &trans &trans &trans &trans        &trans     &out OUT_USB &out OUT_BLE &out OUT_TOG &trans
                &trans &trans &trans &trans &trans        &bt BT_CLR &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4
                       &trans &trans &trans                          &trans       &trans       &trans
                                     &trans &trans                   &trans     &trans
            >;
        };
    };
};
