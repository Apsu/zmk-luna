#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

combos {
  compatible = "zmk,combos";

  COMBO(comma, &kp COMMA,  0  1, base, 50)
  COMBO(    f, &kp     F,  1  2, base, 50)
  COMBO(    b, &kp     B,  2  3, base, 50)

  COMBO(    p, &kp     P,  3  6, base, 50)

  COMBO(    z, &kp     Z,  6  7, base, 50)
  COMBO(    q, &kp     Q,  7  8, base, 50)
  COMBO(  dot, &kp   DOT,  8  9, base, 50)

  COMBO(    g, &kp     G, 11 12, base, 50)
  COMBO(    k, &kp     K, 12 13, base, 50)
  COMBO(    j, &kp     J, 13 16, base, 50)
  COMBO(    w, &kp     W, 16 17, base, 50)
  COMBO(    x, &kp     X, 17 18, base, 50)
};
