#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

combos {
  compatible = "zmk,combos";

// Lower (left thumb)
  COMBO(    v, &kp     V, 27 10, base, 50)
  COMBO(    f, &kp     F, 27 11, base, 50)
  COMBO(    g, &kp     G, 27 12, base, 50)
  COMBO(    m, &kp     M, 27 13, base, 50)
  COMBO( lbkt, &kp  LBKT, 27 14, base, 50)
  COMBO( rbkt, &kp  RBKT, 27 15, base, 50)
  COMBO(    k, &kp     K, 27 16, base, 50)
  COMBO(    z, &kp     Z, 27 17, base, 50)
  COMBO(    j, &kp     J, 27 18, base, 50)
  COMBO(    x, &kp     X, 27 19, base, 50)

// Upper (right thumb)
  COMBO(    l, &kp     L, 28 10, base, 50)
  COMBO(    c, &kp     C, 28 11, base, 50)
  COMBO(    d, &kp     D, 28 12, base, 50)
  COMBO(    r, &kp     R, 28 13, base, 50)
  COMBO(minus, &kp MINUS, 28 14, base, 50)
  COMBO(equal, &kp EQUAL, 28 15, base, 50)
  COMBO(    u, &kp     U, 28 16, base, 50)
  COMBO(    q, &kp     Q, 28 17, base, 50)
  COMBO(    y, &kp     Y, 28 18, base, 50)
  COMBO(  sqt, &kp   SQT, 28 19, base, 50)

// Home row (left hand)
  COMBO(    w, &kp     W, 10 11, base, 50)
  COMBO(    p, &kp     P, 11 12, base, 50)
  COMBO(    b, &kp     B, 12 13, base, 50)
};
