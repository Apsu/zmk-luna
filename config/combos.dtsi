#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

combos {
  compatible = "zmk,combos";

  COMBO(q, &kp Q, 1 2, base, 50)
  COMBO(z, &kp Z, 7 8, base, 50)
  COMBO(j, &kp J, 2 3, base, 50)
};
